package com.InputCalculator;
import java.util.Scanner;

public class InputCalculator {
	
	public static void inputThenPrintSumAndAverage()
	{
		Scanner s=new Scanner(System.in);
		int x,y,count=0;
		boolean flag=true;
		while(flag)
		{
			flag=s.hasNextInt();
			int a=s.nextInt();
			x=x+a;
			count++;
		}
		y=x/count;
		System.out.println("SUM = "+x+" AVG = "+y);
	}

}