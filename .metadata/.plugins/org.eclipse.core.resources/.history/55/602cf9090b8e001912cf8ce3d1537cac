
package com.Switch;

public class DaysInMonths {

public static int getDaysinMonth(int month, int year)
{
	if(month<1&&month>12&&year<1&&year>9999)
	{
		return -1;
	}
	else
	{
		if(isLeapYear)
		{
			switch(month)
			{
				case 1:case 3:case 5: case 7: case 8: case 10: case 12
				return 31;
				case 4:case 6:case 9: case 11
				return 30;
				case 2:
				return 29;
			}
		}
		else
		{
			switch(month)
			{
				case 1:case 3:case 5: case 7: case 8: case 10: case 12
				return 31;
				case 4:case 6:case 9: case 11
				return 30;
				case 2:
				return 28;
			}
		}
			
	}
}
	
}